type User {
  id: ID! @unique
  username: String! @unique
  email: String! @unique
  firstName: String @default(value: "")
  lastName: String
  bio: String
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  rooms: [Room!]!
  loginSecret: String!
}


type Post{
  id: ID! @unique
  location: String
  caption: String!
  user: User!
  files: [File!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like{
  user: User!
  post: Post!
}

type Comment{
  text: String!
  user: User!
  post: Post!
}

type File{
  url: String!
  post: Post!
}

type Room {
  id: ID! @unique
  participants: [User!]!
  message: [Message!]!
}

type Message{
  id: ID! @unique
  text: String!
  from: User! @relation(name: "From")
  to: User! @relation(name: "To")
  room: Room!
}